# Унифицированный .editorconfig для XML
[*.{ant,fxml,jhm,jnlp,jrxml,pom,rng,tld,wadl,wsdd,wsdl,xjb,xml,xsd,xsl,xslt,xul}]
indent_style = space # Использовать пробелы для отступов
indent_size = 4 # Размер отступа (4 пробела)
charset = utf-8 # Кодировка
trim_trailing_whitespace = true # Удалять пробелы в конце строк
insert_final_newline = true # Добавлять пустую строку в конце файла
end_of_line = lf # Формат перевода строки

max_line_length = 120 # Максимальная длина строки